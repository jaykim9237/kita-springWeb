<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="global.sesoc.school.dao.StudentMapper">

	<insert id="enrollStudent" parameterType="StudentVO">
		insert 
			into
				school_student 
			values (
				#{stnum}
				, #{stclass}
				, #{name}
				)
	</insert>
	
	<select id="oneStudent" parameterType="string" resultType="StudentVO">
	  	select
	  		*
	  	from
	  		school_student
	  	where
	  		stnum = #{stnum}
  	</select>
	
	<select id="listStudent" resultType="StudentVO">
		select
				*
			from
				school_student
			order by
				stclass, stnum
	</select>
	
	<delete id="deleteStudent" parameterType="string">
		delete 
			from 
				SCHOOL_STUDENT 
			where 
				stnum = #{stnum}
	</delete>
	
	<update id="editStudent" parameterType="StudentVO">
		update
			school_student
		set
			stclass = #{stclass}
			,	name = #{name}
		where
			stnum = #{stnum}
	
	</update>
</mapper>
